<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_lin_border_bottom"
    android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ll_selector"
                >

                <LinearLayout
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_marginRight="@dimen/x12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_comm_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/commonA2"
                        android:text=""
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/x11"
                    android:layout_marginRight="@dimen/x12"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_marginBottom="@dimen/x6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/lin_modu1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:id="@+id/imgv_modu1"
                                android:layout_width="@dimen/y14"
                                android:layout_height="@dimen/y12"
                                android:src="@mipmap/list_con2"
                                android:contentDescription="@string/app_name"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/tv_modu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#CCC"
                                android:paddingLeft="3sp"
                                android:textSize="@dimen/commonC1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_modu2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/rel_modu1"
                            android:layout_marginLeft="@dimen/y10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:id="@+id/imgv_modu2"
                                android:layout_width="@dimen/y14"
                                android:layout_height="@dimen/y12"
                                android:src="@mipmap/list_con1"
                                android:contentDescription="@string/app_name"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/tv_modu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#CCC"
                                android:paddingLeft="3sp"
                                android:textSize="@dimen/commonC1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_modu3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/sec"
                            android:layout_marginLeft="@dimen/y10"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:id="@+id/imgv_modu3"
                                android:layout_width="@dimen/y14"
                                android:layout_height="@dimen/y12"
                                android:src="@mipmap/list_con3"
                                android:contentDescription="@string/app_name"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/tv_modu3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#CCC"
                                android:paddingLeft="3sp"
                                android:textSize="@dimen/commonC1"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
</LinearLayout>